@model Warehouse.Ui.ProductAdd

@{
    ViewData["Title"] = "Create Product - Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Product Information</h6>
                </div>
                <div class="card-body">
                    @if (ViewData["Message"] != null) {
                        <div class="alert alert-danger" role="alert">
                            @ViewData["Message"]
                        </div>
                    }

                    @using (Html.BeginForm(null, null, FormMethod.Post, new { encType = "multipart/form-data"})) {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            @Html.LabelFor(m => m.Sku)
                            @Html.EditorFor(m => m.Sku, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Sku, "", new { @class="text-danger" } )
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Barcode)
                            @Html.EditorFor(m => m.Barcode, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Barcode, "", new { @class="text-danger" } )
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Name)
                            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class="text-danger" } )
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.BasePrice)
                            @Html.EditorFor(m => m.BasePrice, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.BasePrice, "", new { @class="text-danger" } )
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Weight)
                            @Html.EditorFor(m => m.Weight, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Weight, "", new { @class="text-danger" } )
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Images)
                            @Html.EditorFor(m => m.Images, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Images, "", new { @class="text-danger" } )
                        </div>

                        <div class="form-group">
                            <label>Status</label>
                            <select name="Status" class="form-control">
                                <option value="PUBLISH">Publish</option>
                                <option value="UNPUBLISH">Draft</option>
                            </select>
                        </div>

                        <button class="btn btn-primary">Save</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>