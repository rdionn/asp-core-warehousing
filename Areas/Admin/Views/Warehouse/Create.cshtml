@model Warehouse.Ui.WarehouseAdd
@{
    ViewData["Title"] = "Add Warehouse - Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Warehouse Information</h6>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { encType = "multipart/form-data"})) {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            @Html.LabelFor(m => m.Name)
                            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class="text-danger" } )
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Address)
                            @Html.EditorFor(m => m.Address, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Address, "", new { @class="text-danger" } )
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Phone)
                            @Html.EditorFor(m => m.Phone, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Phone, "", new { @class="text-danger" } )
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Email)
                            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class="text-danger" } )
                        </div>

                        <button class="btn btn-primary">Save</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>